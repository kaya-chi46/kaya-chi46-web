{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": [
    {
      "target": "release",
      "public": ".output/public",
      "trailingSlash": true,
      "cleanUrls": true,
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "functions": "server"
        }
      ]
    },
    {
      "target": "develop",
      "public": ".output/public",
      "trailingSlash": true,
      "cleanUrls": true,
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "functions": "server"
        }
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9046
    },
    "functions": {
      "port": 8046
    },
    "hosting": {
      "port": 4600
    },
    "ui": {
      "enabled": true
    }
  }
}
